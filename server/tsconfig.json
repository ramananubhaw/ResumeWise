{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // FIX: Changed from "." to "./src"
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",
    
    // FIX: Uncommented and ensured these are present for Node.js
    "lib": ["esnext"], 
    "types": ["node"], 

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Recommended Options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // Style Options (Leave these commented unless actively needed)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,
  },
  
  // FIX: Added the critical include array to tell tsc which files to compile
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}